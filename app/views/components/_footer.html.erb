<footer class="bg-[#F9F9F6] text-[#383936]" id="footercontent">

  <div class="flex flex-col md:flex-row px-6 md:px-20 py-8 border-b border-[#B06C49]/30">
    <div class="w-full md:w-1/3 pr-0 md:pr-12">
      <div class="py-3 md:py-0">
        <p class="text-xl font-playfair-display font-bold mb-2"><%= newsletter_title %></p>
        <p class="text-sm font-lato opacity-90"><%= newsletter_subtitle %></p>
        <form class="flex items-center mt-5 relative">
          <input type="email" class="w-full px-4 py-3 border border-[#B06C49] rounded-3xl focus:outline-none focus:ring-2 focus:ring-[#A3B18A]" placeholder="Inserisci il tuo indirizzo e-mail" required>
          <button type="submit" class="absolute right-2">
            <span class="w-9 h-9 bg-[#B06C49] rounded-full flex items-center justify-center text-white text-lg font-bold hover:bg-[#A3B18A] transition-colors duration-300">â†’</span>
          </button>
        </form>
        <div class="text-red-500 mt-2 hidden">Verifica il tuo indirizzo e-mail</div>

        <div class="flex items-center justify-start pt-5 space-x-4">
          <% social_icons = [
            "https://cdn-icons-png.flaticon.com/512/733/733547.png",
            "https://cdn-icons-png.flaticon.com/512/733/733579.png", 
            "https://cdn-icons-png.flaticon.com/512/733/733635.png", 
            "https://cdn-icons-png.flaticon.com/512/733/733553.png"  
          ] %>

          <% social_icons.each do |icon| %>
            <a href="#" class="w-9 h-9  rounded-full flex items-center justify-center hover:bg-[#A3B18A] transition-colors duration-300">
              <img src="<%= icon %>" alt="Social Icon" class="w-5 h-5">
            </a>
          <% end %>
        </div>
      </div>
    </div>

    <div class="w-full md:w-2/3 flex flex-col md:flex-row justify-between mt-8 md:mt-0">
      <% columns = {
        "Assistenza" => assistance_links,
        "Informazioni su" => info_links,
        "World" => world_links,
        "Shortcuts" => shortcut_links
      } %>

      <% columns.each do |title, links| %>
        <div class="w-full md:w-1/4 mb-6 md:mb-0">
          <p class="text-lg font-playfair-display font-bold cursor-pointer mb-3"><%= title %></p>
          <ul class="space-y-2">
            <% links.each do |link| %>
              <li><a class="hover:underline text-[#383936] font-lato" href="#"><%= link %></a></li>
            <% end %>
          </ul>
        </div>
      <% end %>
    </div>
  </div>

 
</footer>
