<header class="sticky top-0 z-50 bg-[#F9F9F6] shadow-sm">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex items-center justify-between h-16 md:h-20">


      <div class="flex-shrink-0 flex items-center font-playfair-display font-bold text-xl text-gray-800">
        Punto Zero Architettura
      </div>


      <nav class="hidden md:flex md:items-center md:justify-center md:flex-1 md:px-4">
        <div class="flex space-x-2 lg:space-x-4 xl:space-x-6">
          <% links.each do |link| %>
            <% anchor = link.parameterize %> 
            <a href="#<%= anchor %>" class="text-gray-800 hover:text-black px-1 py-1 text-sm lg:text-base font-medium no-wrap">
              <%= link %>
            </a>
          <% end %>
        </div>
      </nav>

      <div class="md:hidden">
        <button id="burger-btn" aria-label="Apri menu" class="focus:outline-none">
          <svg id="burger-icon" class="h-6 w-6 text-gray-800" fill="none" stroke="currentColor" viewBox="0 0 24 24" >
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 8h16M4 16h16" />
          </svg>
          <svg id="close-icon" class="hidden h-6 w-6 text-gray-800" fill="none" stroke="currentColor" viewBox="0 0 24 24" >
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
          </svg>
        </button>
      </div>

    </div>


    <nav id="mobile-menu" class="hidden flex-col space-y-4 py-4 md:hidden">
      <% links.each do |link| %>
        <% anchor = link.parameterize %>
        <a href="#<%= anchor %>" class="block px-2 py-2 text-gray-800 font-medium hover:bg-gray-200 rounded" onclick="closeMobileMenu()">
          <%= link %>
        </a>
      <% end %>
    </nav>
  </div>
</header>

<script>
  const burgerBtn = document.getElementById('burger-btn');
  const mobileMenu = document.getElementById('mobile-menu');
  const burgerIcon = document.getElementById('burger-icon');
  const closeIcon = document.getElementById('close-icon');

  burgerBtn.addEventListener('click', () => {
    const isOpen = !mobileMenu.classList.contains('hidden');
    if (isOpen) {
      mobileMenu.classList.add('hidden');
      burgerIcon.classList.remove('hidden');
      closeIcon.classList.add('hidden');
    } else {
      mobileMenu.classList.remove('hidden');
      burgerIcon.classList.add('hidden');
      closeIcon.classList.remove('hidden');
    }
  });

  function closeMobileMenu() {
    mobileMenu.classList.add('hidden');
    burgerIcon.classList.remove('hidden');
    closeIcon.classList.add('hidden');
  }
</script>
