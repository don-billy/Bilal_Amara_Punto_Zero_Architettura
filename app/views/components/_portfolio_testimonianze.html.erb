<section class="w-full px-6 md:px-12 py-20 bg-[#F9F9F6]">
  <h2 class="text-5xl font-extrabold text-[#A3B18A] text-center"><%= titolo_principale %></h2>
  <br><br><br>

  <div class="flex flex-col lg:flex-row gap-16 items-center">
    
    
    <div class="w-full lg:w-1/2">
      <h3 class="text-2xl font-semibold text-gray-700 text-center mb-12 border-b-2 border-[#cd7f32] inline-block pb-2"><%= titolo_portfolio %></h3>

      <!-- Layout mobile -->
      <div class="flex flex-wrap gap-4 justify-center items-center md:hidden">
        <img src="<%= img1 %>" class="w-36 h-36 object-cover rounded-lg border-4 border-white shadow-md" alt="Foto 1" />
        <img src="<%= img2 %>" class="w-36 h-36 object-cover rounded-lg border-4 border-white shadow-md" alt="Foto 2" />
        <img src="<%= img3 %>" class="w-36 h-36 object-cover rounded-lg border-4 border-white shadow-md" alt="Foto 3" />
        <img src="<%= img4 %>" class="w-36 h-36 object-cover rounded-lg border-4 border-white shadow-md" alt="Foto 4" />
        <img src="<%= img5 %>" class="w-36 h-36 object-cover rounded-lg border-4 border-white shadow-md" alt="Foto 5" />
        <img src="<%= img6 %>" class="w-36 h-36 object-cover rounded-lg border-4 border-white shadow-md" alt="Foto 6" />
        <img src="<%= img7 %>" class="w-36 h-36 object-cover rounded-lg border-4 border-white shadow-md" alt="Foto 7" />
        <img src="<%= img8 %>" class="w-36 h-36 object-cover rounded-lg border-4 border-white shadow-md" alt="Foto 8" />
      </div>

      <!-- Layout desktop -->
      <div class="relative mx-auto hidden md:block h-[600px] max-w-[500px]">
        <img src="<%= img1 %>" class="absolute top-0 left-[-95%] w-28 h-28 md:w-60 md:h-60 object-cover rounded-lg border-8 border-white shadow-xl rotate-[-6deg] z-10" alt="Foto 1" />
        <img src="<%= img2 %>" class="absolute top-6 left-[-35%] w-28 h-28 md:w-60 md:h-60 object-cover rounded-lg border-8 border-white shadow-xl rotate-[4deg] z-20" alt="Foto 2" />
        <img src="<%= img3 %>" class="absolute top-0 left-[18%] w-28 h-28 md:w-60 md:h-60 object-cover rounded-lg border-8 border-white shadow-xl rotate-[-2deg] z-10" alt="Foto 3" />
        <img src="<%= img4 %>" class="absolute top-10 left-[85%] w-28 h-28 md:w-60 md:h-60 object-cover rounded-lg border-8 border-white shadow-xl rotate-[5deg] z-20" alt="Foto 4" />
        <img src="<%= img5 %>" class="absolute top-[50%] left-[-95%] w-28 h-28 md:w-60 md:h-60 object-cover rounded-lg border-8 border-white shadow-xl rotate-[2deg] z-10" alt="Foto 5" />
        <img src="<%= img6 %>" class="absolute top-[54%] left-[-32%] w-28 h-28 md:w-60 md:h-60 object-cover rounded-lg border-8 border-white shadow-xl rotate-[-3deg] z-20" alt="Foto 6" />
        <img src="<%= img7 %>" class="absolute top-[50%] left-[22%] w-28 h-28 md:w-60 md:h-60 object-cover rounded-lg border-8 border-white shadow-xl rotate-[4deg] z-10" alt="Foto 7" />
        <img src="<%= img8 %>" class="absolute top-[58%] left-[85%] w-28 h-28 md:w-60 md:h-60 object-cover rounded-lg border-8 border-white shadow-xl rotate-[-5deg] z-20" alt="Foto 8" />
      </div>
    </div>

    <!-- Testimonianze -->
    <div class="w-full lg:w-1/2 bg-[#FAF8F5] rounded-lg p-8 ">
      <h3 class="text-2xl font-semibold text-gray-700 mb-6 border-b-2 border-bronze-500 inline-block pb-2"><%= titolo_testimonianze %></h3>

      <div class="space-y-8">
        <div class="flex items-center gap-4">
          <img src="<%= foto_cliente1 %>" alt="Cliente 1" class="w-14 h-14 rounded-full object-cover border-2 border-bronze-500">
          <div>
            <p class="text-gray-800 italic"><%= testimonianza1 %></p>
            <p class="font-semibold text-bronze-600 mt-2"><%= nome_cliente1 %></p>
          </div>
        </div>
        <div class="flex items-center gap-4">
          <img src="<%= foto_cliente2 %>" alt="Cliente 2" class="w-14 h-14 rounded-full object-cover border-2 border-bronze-500">
          <div>
            <p class="text-gray-800 italic"><%= testimonianza2 %></p>
            <p class="font-semibold text-bronze-600 mt-2">— <%= nome_cliente2 %></p>
          </div>
        </div>
        <div class="flex items-center gap-4">
          <img src="<%= foto_cliente3 %>" alt="Cliente 3" class="w-14 h-14 rounded-full object-cover border-2 border-bronze-500">
          <div>
            <p class="text-gray-800 italic"><%= testimonianza3 %></p>
            <p class="font-semibold text-bronze-600 mt-2">— <%= nome_cliente3 %></p>
          </div>
        </div>
      </div>
    </div>

  </div>
</section>

<style>
  .border-bronze-500 {
    border-color: #b87333;
  }
  .text-bronze-600 {
    color: #b87333;
  }
</style>
